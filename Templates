import pandas as pd
import re

def fullfill_credit_union_info(df, col="financial_inst_name"):
    # Define a function to replace the patterns
    def replace_patterns(text):
        # Define the pattern to match 'FED', 'CRED', and 'UN' variations
        pattern = re.compile(
            r'\b(FED)(ERAL)?\s*(CRED|CREDIT)?\s*(UN|UNION)?\b', 
            flags=re.IGNORECASE
        )
        # Replace the found patterns with the full 'FEDERAL CREDIT UNION'
        text = pattern.sub(lambda m: "FEDERAL CREDIT UNION", text)
        return text
    
    # Apply the function to each entry in the specified column
    df[col] = df[col].apply(replace_patterns)
    
    return df

# Example usage:
# Assuming 'df' is your DataFrame and 'financial_inst_name' is the column with the bank names
# df = fullfill_credit_union_info(df, 'financial_inst_name')
