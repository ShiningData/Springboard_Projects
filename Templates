import pandas as pd
import re

def fullfill_credit_union_info(df, col="financial_inst_name"):
    # Define patterns and replacements
    patterns = [
        # First handle the full 'FEDERAL CREDIT UNION' to prevent partial matches later on
        (r"\bFED\s*CRED\s*UNION\b", "FEDERAL CREDIT UNION"),
        (r"\bFED\s*CRED\s*UN\b", "FEDERAL CREDIT UNION"),
        (r"\bFED\s*CREDIT\s*UNION\b", "FEDERAL CREDIT UNION"),
        (r"\bFED\s*CREDIT\s*UN\b", "FEDERAL CREDIT UNION"),
        # Then handle the 'CREDIT UNION' to prevent 'CREDIT' being replaced before 'UNION'
        (r"\bCR\s*UN\b", "CREDIT UNION"),
        (r"\bCR\s*UNION\b", "CREDIT UNION"),
        (r"\bCRED\s*UNION\b", "CREDIT UNION"),
        (r"\bCRED\s*UN\b", "CREDIT UNION"),
        (r"\bCREDIT\s*UN\b", "CREDIT UNION"),
        # Specific 'FEDERAL' replacements
        (r"\bFED\b", "FEDERAL"),
        # Now handle individual 'CREDIT' and 'UNION'
        (r"\bCU\b", "CREDIT UNION"),
        (r"\bC\s*U\b", "CREDIT UNION"),
        (r"\bCREDITS\b", "CREDIT"),
        # Add more patterns as necessary
    ]
    
    # Function to apply the replacements
    def replace_patterns(text, patterns):
        for pat, repl in patterns:
            text = re.sub(pat, repl, text, flags=re.IGNORECASE)
        return text
    
    # Apply the function across the specified column
    df[col] = df[col].apply(lambda x: replace_patterns(x, patterns))
    
    return df

# Assume 'df' is your dataframe and 'financial_inst_name' is the column with the bank names
# df = fullfill_credit_union_info(df, 'financial_inst_name')
