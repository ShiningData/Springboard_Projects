import seaborn as sns
import matplotlib.pyplot as plt
import numpy as np

# Sample data
x = np.arange(0, 10, 0.1)
data1 = np.sin(x)
data2 = np.cos(x)

# Create the first axis
fig, ax1 = plt.subplots()

# Plot the first dataset on the first axis
sns.lineplot(x=x, y=data1, ax=ax1, label="Dataset 1", color='b')

# Set the y-axis label for the first axis
ax1.set_ylabel("Y-axis (Dataset 1)", color='b')

# Create the second axis (twin axis)
ax2 = ax1.twinx()

# Plot the second dataset on the second axis
sns.lineplot(x=x, y=data2, ax=ax2, label="Dataset 2", color='r')

# Set the y-axis label for the second axis
ax2.set_ylabel("Y-axis (Dataset 2)", color='r')

# Customize the plot
plt.xlabel("X-axis")
plt.title("Seaborn Line Plots with Twin Axes")

# Add legends for both datasets
lines1, labels1 = ax1.get_legend_handles_labels()
lines2, labels2 = ax2.get_legend_handles_labels()
lines = lines1 + lines2
labels = labels1 + labels2
plt.legend(lines, labels, loc="upper left")

# Display the plot
plt.show()
