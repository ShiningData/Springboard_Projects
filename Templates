# Add predicted labels with spacing to move them away from the table
for i in range(len(total_actual)):
    for j in range(len(total_predicted)):
        if mask[i, j]:  # Only add predicted labels for misclassifications
            plt.text(j + 0.5, i + 0.5, f"Pred: {y_pred[i]}", ha='center', va='center', color='red', fontsize=12)

