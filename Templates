import re

def standardize_bank_name(bank_name):
    # List of keywords that might merge with other words
    keywords = ["Federal", "Credit", "Union", "Bank"]
    
    # Split the bank name into words
    words = re.split(r'(\s+)', bank_name)  # Keep spaces to rejoin later

    # Check each keyword for merging issues
    for keyword in keywords:
        for i, word in enumerate(words):
            # If the word ends with the keyword but is longer than the keyword
            if word.endswith(keyword) and len(word) > len(keyword) and not word[:-len(keyword)].isspace():
                # Split the word into two parts: before the keyword and the keyword
                part1 = word[:-len(keyword)]
                part2 = word[-len(keyword):]
                words[i] = part1 + ' ' + part2  # Insert a space between them

    # Reconstruct the bank name from the words list
    corrected_name = ''.join(words)

    # Optional: Rearrange words if needed
    # Split again to check order
    word_list = corrected_name.split()
    
    # Check if any keyword is at the end and should be at the start
    for keyword in keywords:
        if keyword in word_list:
            # Move the keyword to the front
            keyword_index = word_list.index(keyword)
            word_list.insert(0, word_list.pop(keyword_index))
    
    # Return the rearranged name
    return ' '.join(word_list)

# Example Usage
print(standardize_bank_name("Black ChimneyFederal Credit Union"))  # Chimney Black Federal Credit Union
print(standardize_bank_name("Red Flag Credit Union"))  # Red Flag Credit Union
