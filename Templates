import os
import shutil

# Define the pickle file name and destination directory
pickle_file_name = "your_model.pickle"  # Replace with the actual pickle file name
destination_directory = "/path/to/your/destination_directory/"

# Get the current working directory
current_directory = os.getcwd()

# Create the source and destination paths
source_path = os.path.join(current_directory, pickle_file_name)
destination_path = os.path.join(destination_directory, pickle_file_name)

# Check if the pickle file exists in the current directory
if os.path.exists(source_path):
    try:
        # Move the pickle file to the destination directory
        shutil.move(source_path, destination_path)
        print(f"Model '{pickle_file_name}' moved successfully to {destination_path}")
    except Exception as e:
        print(f"An error occurred while moving the pickle file: {str(e)}")
else:
    print(f"Pickle file '{pickle_file_name}' not found in the current directory.")
