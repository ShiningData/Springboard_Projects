import numpy as np
from yellowbrick.classifier import ConfusionMatrix
import matplotlib.pyplot as plt

# Fabricated actual values (ground truth) for a 3-class problem
y_actual = np.array([0, 1, 2, 0, 1, 2, 0, 2, 1, 0])

# Fabricated predicted values from a classification model
y_pred = np.array([0, 1, 2, 0, 1, 2, 0, 2, 0, 1])

# Create a ConfusionMatrix visualizer
cm = ConfusionMatrix.from_estimator(estimator=None, X=None, y_true=y_actual, y_pred=y_pred)

# Draw and display the confusion matrix
cm.figure_.suptitle("Confusion Matrix")
cm.poof()

plt.show()
