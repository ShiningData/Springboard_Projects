import pandas as pd
import re

# Sample DataFrame
data = {'financial_inst_name': ['US BANK CU', 'US BANK Credit Union', 'ABC CU', 'XYZ Credit Union', 'US BANK FCU']}
df = pd.DataFrame(data)

# Define a function to replace 'CU' with 'Credit Union' only if it's separate
def replace_cu(text):
    # Use regular expression to find 'CU' as a separate word
    # Ensure that 'CU' is not part of another word (e.g., 'FCU')
    if re.search(r'\bCU\b', text) and not re.search(r'\bFCU\b', text):
        # Replace 'CU' with 'Credit Union'
        return re.sub(r'\bCU\b', 'Credit Union', text)
    else:
        return text

# Apply the function to the 'financial_inst_name' column
df['financial_inst_name'] = df['financial_inst_name'].apply(replace_cu)

print(df)
