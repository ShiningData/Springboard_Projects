import pandas as pd
import numpy as np
import seaborn as sns
import matplotlib.pyplot as plt
from scipy.stats import pearsonr, spearmanr

# Load dataset (assuming you have a CSV file with deposit balance and interest rate data)
data = pd.read_csv('deposit_data.csv')

# Step 3: Correlation Analysis - Pearson Correlation Coefficient
# Calculate Pearson correlation coefficient
pearson_corr, _ = pearsonr(data['Interest_Rate'], data['Deposit_Balance'])
print("Pearson correlation coefficient:", pearson_corr)

# Visualize the relationship using a scatter plot
plt.figure(figsize=(8, 6))
sns.scatterplot(x='Interest_Rate', y='Deposit_Balance', data=data)
plt.xlabel('Interest Rate')
plt.ylabel('Deposit Balance')
plt.title('Scatter Plot - Interest Rate vs. Deposit Balance (Pearson)')
plt.show()

# Step 3: Correlation Analysis - Spearman Rank Correlation Coefficient
# Calculate Spearman rank correlation coefficient
spearman_corr, _ = spearmanr(data['Interest_Rate'], data['Deposit_Balance'])
print("Spearman rank correlation coefficient:", spearman_corr)

# Visualize the relationship using a scatter plot
plt.figure(figsize=(8, 6))
sns.scatterplot(x='Interest_Rate', y='Deposit_Balance', data=data)
plt.xlabel('Interest Rate')
plt.ylabel('Deposit Balance')
plt.title('Scatter Plot - Interest Rate vs. Deposit Balance (Spearman)')
plt.show()
