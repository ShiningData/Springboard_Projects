import pandas as pd
import re

def fullfill_credit_union_info(df, col="financial_inst_name"):
    # Define a function to replace the patterns
    def replace_patterns(text):
        # Pattern to match variations of 'FEDERAL CREDIT UNION'
        fed_credit_union_pattern = re.compile(
            r"\b(?:FED(?:ERAL)?\s+)?(?:CRED(?:IT)?\s+)?UN(?:ION)?\b", 
            flags=re.IGNORECASE
        )
        text = fed_credit_union_pattern.sub("FEDERAL CREDIT UNION", text)
        
        # Handle 'CREDIT' and 'UNION' individually if they are standalone
        text = re.sub(r"\bCREDITS?\b", "CREDIT", text, flags=re.IGNORECASE)
        text = re.sub(r"\bUN\b", "UNION", text, flags=re.IGNORECASE)
        
        return text
    
    # Apply the function across the specified column
    df[col] = df[col].apply(replace_patterns)
    
    return df

# Example usage:
# Assuming 'df' is your DataFrame and 'financial_inst_name' is the column with the bank names
# df = fullfill_credit_union_info(df, 'financial_inst_name')
