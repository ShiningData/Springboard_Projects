import streamlit as st
import pandas as pd

def pme_pivot_page():
    st.title("PME PIVOT")

    # Example DataFrame for Rule Status
    rule_status_data = pd.DataFrame({
        "Rule Status": ["Active", "Inactive"],
        "Count": [10, 5],
        "Percent(%)": [66.7, 33.3]
    })

    # Example DataFrame for Current Review Summary
    review_summary_data = pd.DataFrame({
        "Current Review Outcomes": ["Outcome1", "Outcome2", "Not Used from Prior Rpt"],
        "Count": [20, 10, 5],
        "Percent(%)": [57.1, 28.6, 14.3]
    })

    # Display Rule Status Table
    st.subheader("Overall Rule Status")
    st.dataframe(rule_status_data)

    # Display Review Summary Table
    st.subheader("Current Review Summary")
    st.dataframe(review_summary_data)

    # Pie chart
    st.subheader("Current Review Outcome Pie Chart")
    st.write("Pie Chart Placeholder")
