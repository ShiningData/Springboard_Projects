def get_default_six_month_period():
    """
    Calculate the default 6-month period based on the current date.
    Returns a tuple of (begin_date, end_date).
    """
    today = date.today()
    first_day_of_current_month = date(today.year, today.month, 1)
    first_day_of_previous_month = first_day_of_current_month - timedelta(days=1)
    max_date = date(first_day_of_previous_month.year, first_day_of_previous_month.month, 1)

    # Determine if it's the first or second half of the year
    if max_date.month <= 6:
        # Default period: January to June
        begin_date = date(max_date.year, 1, 1)
        end_date = date(max_date.year, 6, 30)
    else:
        # Default period: July to December
        begin_date = date(max_date.year, 7, 1)
        end_date = date(max_date.year, 12, 31)

    return begin_date, end_date, max_date
